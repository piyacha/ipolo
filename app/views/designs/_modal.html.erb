            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Address Modal --> 
<div id="addressModal" class="modal fade modal-wide" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">ข้อมูลผู้สั่งซื้อ</h4>
      </div>

      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
            <div class="design-img"></div>
          </div>
          <div class="col-xs-12">
            <%= form_tag root_path, :class => 'row' do %>

              <div class="form-group col-xs-12 col-md-6">
                <label for="">ชื่อ</label>
                <%= text_field_tag 'first_name', nil, placeholder: '' ,  class:'form-control' %>
              </div>

              <div class="form-group col-xs-12 col-md-6">
                <label for="">อีเมล</label>
                <%= text_field_tag 'email',nil, placeholder: '', class:'form-control', :required => true %>
              </div>

              <div class="form-group col-xs-12 col-md-6">
                <label for="">โทรศัพท์</label>
                <%= text_field_tag 'tel',nil, placeholder: '', class:'form-control', :required => true %>
              </div>
              
              <div class="form-group col-xs-12 col-md-6">
                <label for="">แฟกซ์</label>
                <%= text_field_tag 'fax',nil, placeholder: '', class:'form-control', :required => true %>
              </div>

              <div class="form-group col-xs-12">
                <label for="">ที่อยู่</label>
                 <%= text_area_tag 'address', nil, placeholder: '', class:'form-control', rows: 3, cols: 25 %>
              </div>

              <div class="form-group col-xs-12">
                <label for="">ข้อมูลกรณีขอเสนอราคาในนามบริษัท</label>
              </div>

              <div class="form-group col-xs-12 col-md-6">
                <label for="">ชื่อบริษัท</label>
                <%= text_field_tag 'company_name',nil, placeholder: '', class:'form-control' %>
              </div>

              <div class="form-group col-xs-12 col-md-6">
                <label for="">สาขา (ถ้ามี)</label>
                <%= text_field_tag 'company_branch',nil, placeholder: '', class:'form-control' %>
              </div>

              <div class="form-group col-xs-12">
                <label for="">เลขประจำตัวผู้เสียภาษี</label>
                <%= text_field_tag 'tax_identification_number',nil, placeholder: '', class:'form-control' %>
              </div>

            <%end%>

            <div class="row">
              <div class="col-xs-12 col-md-6">
                <button class="back-modal-btn" data-toggle="modal" id="address_back_btn">
                  ย้อนกลับ
                </button>
              </div>
              <div class="col-xs-12 col-md-6">
                <button class="create-modal-btn" data-toggle="modal" id="make_order_address">
                  แจ้งโอน
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

