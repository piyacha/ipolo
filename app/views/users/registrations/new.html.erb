<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <span class="login100-form-title p-b-26">
          Sign up
        </span>
        <span class="login100-form-title p-b-48">
          <i class="zmdi zmdi-font"></i>
        </span>

        <label> Email </label>
        <div class="wrap-input100 validate-input" data-validate = "Valid email is: a@b.c">
          <%= f.email_field :email, autofocus: true, class: 'input100 has-val' %>
          <div class="background-gradient"></div>
        </div>

        <label>Password <% if @minimum_password_length %><em>(<%= @minimum_password_length %> characters minimum)</em><% end %> </label>
        <div class="wrap-input100 validate-input" data-validate="Enter password">
           <%= f.password_field :password, autocomplete: "off", class: 'input100 has-val' %>
           <div class="background-gradient"></div>
        </div>
        
        <label> Password confirmation </label>
        <div class="wrap-input100 validate-input" data-validate="Enter password">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input100 has-val' %>
          <div class="background-gradient"></div>
        </div>

        <%= devise_error_messages! %>

        <div class="container-login100-form-btn">
          <div class="wrap-login100-form-btn">
            <%= f.submit "Sign up", class:"login100-form-btn ipolo-btn" %>
          </div>
        </div>

        <div class="text-center p-t-115">
          <%= render "users/shared/links" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>




